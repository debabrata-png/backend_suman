<%- include("header") %> 

<div style="margin: 0px; padding: 40px;">
<h3>Add Books and Papers</h1>
<br>
<br>
<form id="frm-add-category" name="frm-add-category" method="post" action="/addbook">
    <div class="row">
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Title of book chapter</label>
                <input required type="text" class="form-control" placeholder="Enter title" name="booktitle">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Paper Title</label>
                <input required type="text" class="form-control" placeholder="Enter paper title" name="papertitle">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Proceeding Title</label>
                <input required type="text" class="form-control" placeholder="Enter proceeding title" name="proceeding">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>ISSN / ISBN number</label>
                <input required type="text" class="form-control" placeholder="Enter ISSN / ISBN" name="issn">
            </div>
        </div>
      
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Publisher</label>
                <input required type="text" class="form-control" placeholder="Enter publisher" name="publisher">
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Year of publication</label>
                <select class="form-control" name="yop">
                    <option value="2015-16">2015-16</option>
                    <option value="2016-17">2016-17</option>
                    <option value="2017-18">2017-18</option>
                    <option value="2018-19">2018-19</option>
                    <option value="2019-20">2019-20</option>
                    <option value="2020-21">2020-21</option>

                </select>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Affiliated to current institution at the time of publication</label>
                <select class="form-control" name="affiliated">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
            </div>
        </div>
    </div>

    <button class="btn btn-dark" type="submit">Submit</button>
</form>
</div>
<%- include("footer") %> 