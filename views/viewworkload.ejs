<%- include("header") %> 



<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">View Workload</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">List Workload</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements disabled -->
                <div class="card card-dark">
                    <div class="card-header">
                        <h3 class="card-title">List Workload</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table>
                            <tr>
                                <td>
                                    <a class="btn btn-dark" href="/addworkload/<%= user %>?name=<%= name %>">+ Add New Workload</a>
                                </td>
                               
                            </tr>
                        </table>
                        
                        <br><br>
                        <table id="tbl-list-category" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <!-- <th>Coursecode</th> -->
                                    <th>Program</th> 
                                    <th>Course</th>
                                    <th>Module</th>
                                    <!-- <th>Class time</th> -->
                                    <th>Audience</th>
                                    <!-- <th>Semester</th>-->
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% categories.forEach(function(data){ %>
                                <tr>
                                    <!-- <td><%= data.id %></td> -->
                                    <td><%= data.program %> </td>
                                    <td><%= data.course %> - <%= data.coursecode %></td>
                                    <td><%= data.module %></td>
                                    <!-- <td><%= data.classtime %></td> -->
                                    <td>Section <%= data.section %> Semester <%= data.semester %></td>
                                    <!-- <td><%= data.semester %></td> -->
                                    <!-- <td><%= data.link %></td> -->
                                    <td>
                                        <a href="/editworkload/<%= data.id %>?user=<%= user %>&name=<%= name %>" class="btn btn-primary"><i class="fa fa-edit" title="edit class"></i></a>
                                        <a href="/enrolllist/<%= data.coursecode %>" class="btn btn-primary"><i class="fas fa-user-friends" title="enroll students"></i></a>
                                        <a href="/viewclassbycourse/<%= data.coursecode %>" class="btn btn-primary" target="_blank"><i class="fas fa-video" title="join class"></i></a>
                                        <a href="/viewcfiles/<%= data.coursecode %>" class="btn btn-primary"><i class="far fa-file-code" title="view files and links"></i></a>
                                        <a href="/totalattended/<%= data.coursecode %>" class="btn btn-primary"><i class="fas fa-clipboard-list" title="attendance report"></i></a>
                                        <a href="/viewiamarks/<%= data.coursecode %>" class="btn btn-primary"><i class="fas fa-poll-h" title="IA marks"></i></a>
                                        <a href="/viewiamarkssummary/<%= data.coursecode %>" class="btn btn-primary"><i class="fas fa-poll" title="IA marks summary"></i></a>
                                        <form method="post" action="/deleteworkload" id="frm-delete-category-<%= data.id %>">
                                        
                                            <input type="hidden" value="<%= data.id %>" name="category_id"/>
                                            <input type="hidden" value="<%= user %>" name="user"/>
                                            <input type="hidden" value="<%= name %>" name="name"/>

                                        </form>

                                    <a href="javascript:void(0)" onclick="if(confirm('Are you sure want to delete ? ')){  $('#frm-delete-category-<%= data.id %>').submit()  }" class="btn btn-danger"><i class="fa fa-trash" title="delete class"></i></a>
                                    </td>
                                </tr>
                                
                                <% }) %>
                            </tbody>
                            <!-- <tfoot>
                                <tr>
                                    <th>#ID</th>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot> -->
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

<%- include("footer") %> 