<%- include("header") %> 

<div style="margin: 0px; padding: 40px;">
<h3>Add Exam</h1>
<br>
<br>
<form id="frm-add-category" name="frm-add-category" method="post" action="/addexam" enctype="multipart/form-data">
    <div class="row">
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Exam name</label>
                <input required type="text" class="form-control" placeholder="Enter exam name" name="examname">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Course Code</label>
                <input required type="text" class="form-control" placeholder="Enter course code" name="coursecode">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Course</label>
                <input required type="text" class="form-control" placeholder="Enter course" name="course">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Program code</label>
                <input required type="text" class="form-control" placeholder="Enter program code" name="programcode">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Proctor link (type starting with https)</label>
                <input required type="text" class="form-control" placeholder="Enter proctor link" name="proctorlink">
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Select Question Paper PDF File</label>
                <input type="file" name="upl" id="upl">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Exam Date</label>
                <input required type="date" class="form-control" placeholder="Enter exam date" name="classdate">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Exam Time (HH:MM) for eg, 14:30</label>
                <input required type="text" class="form-control" placeholder="Enter classtime" name="classtime">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Duration in minutes </label>
                <input required type="number" class="form-control" placeholder="Enter duration" name="duration">
            </div>
        </div>
      
       
        <div class="col-sm-6">
            <div class="form-group">
                <label>Semester</label>
                <select class="form-control" name="semester">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                    <option value="6">6</option>
                    <option value="7">7</option>
                    <option value="8">8</option>
                    <option value="9">9</option>
                    <option value="10">10</option>
                </select>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Section</label>
                <select class="form-control" name="section">
                    <option value="A">A</option>
                    <option value="B">B</option>
                    <option value="C">C</option>
                    <option value="D">D</option>
                    <option value="E">E</option>
                    <option value="F">F</option>
                    <option value="G">G</option>
                    <option value="H">H</option>
                    <option value="I">I</option>
                </select>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Active</label>
                <select class="form-control" name="status">
                    <option value="1">Yes</option>
                    <option value="0">No</option>
                </select>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Academic year</label>
                <select class="form-control" name="academicyear">
                    <option value="2020-21">2020-21</option>
                    <option value="2021-22">2021-22</option>

                </select>
            </div>
        </div>
    </div>

    <button class="btn btn-dark" type="submit">Submit</button>
</form>
</div>
<%- include("footer") %> 