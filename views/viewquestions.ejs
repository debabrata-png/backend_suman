<%- include("header") %> 



<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">View Questions</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">List Questions</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements disabled -->
                <div class="card card-dark">
                    <div class="card-header">
                        <h3 class="card-title">List Questions</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <a class="btn btn-dark" href="/addifiles/<%= examid %>">+ Add New Questions</a>
                        <br><br>
                        <table id="tbl-list-category" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <!-- <th>Coursecode</th> -->
                                    <th>Question</th>
                                    <th>Option</th>
                                    <th>Type</th>
                                    <th>Difficulty</th>
                                    <th>Full marks</th>
                                    <th>Question Group</th>
                                    <th>Module</th>
                                    <th>Time in Seconds</th>
                                    <th>CO</th> 
                                    <th>PO</th> 
                                    <th>Link</th> 
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% categories.forEach(function(data){ %>
                                <tr>
                                    <!-- <td><%= data.id %></td> -->
                                    <td><%= data.question %></td>
                                    <td><%= data.option %></td>
                                    <td><%= data.type %></td>
                                    <td><%= data.difficulty %></td>
                                    <td> <%= data.fullmarks %> </td>
                                    <td><%= data.questiongroup %></td>
                                    <td><%= data.module %></td>
                                    <td><%= data.timeinsec %></td>
                                    <td><%= data.co %></td>
                                    <td><%= data.po %></td>
                                    <td><%= data.link %></td>
                                    <td>
                                        <!-- <a href="/editexam/<%= data.id %>" class="btn btn-primary"><i class="fa fa-edit" title="edit exam"></i></a> -->
                                        <!-- <a href="/addifiles/<%= data.id %>" class="btn btn-primary"><i class="fas fa-question-circle" title="Add questions"></i></a> -->
                                        <form method="post" action="/deletequestions/<%= data.id %>" id="frm-delete-category-<%= data.id %>">
                                        
                                            <input type="hidden" value="<%= data.id %>" name="category_id"/>

                                        </form>

                                    <a href="javascript:void(0)" onclick="if(confirm('Are you sure want to delete ? ')){  $('#frm-delete-category-<%= data.id %>').submit()  }" class="btn btn-danger"><i class="fa fa-trash" title="delete exam"></i></a>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                            <!-- <tfoot>
                                <tr>
                                    <th>#ID</th>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot> -->
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

<%- include("footer") %> 