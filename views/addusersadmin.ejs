<%- include("header") %> 

<div style="margin: 0px; padding: 40px;">
<h3>Add Users</h1>
<br>
<br>
All fields are mandatory. Email must be unique for all users.
<br><br>
<form id="frm-add-category" name="frm-add-category" method="post" action="/addusersadmin">
    <div class="row">
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Code</label>
                <input required type="text" class="form-control" placeholder="Enter code" name="code">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Name</label>
                <input required type="text" class="form-control" placeholder="Enter name" name="name">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Email</label>
                <input required type="text" class="form-control" placeholder="Enter email" name="email">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Password</label>
                <input required type="password" class="form-control" placeholder="Enter email" name="password">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Colid</label>
                <input required type="number" class="form-control" placeholder="Enter colid" name="colid">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Phone</label>
                <input required type="text" class="form-control" placeholder="Enter phone" name="phone">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Department</label>
                <input required type="text" class="form-control" placeholder="Enter department" name="department">
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Select Status</label>
                <select class="form-control" name="status">
                    <option value="1">Active</option>
                    <option value="0">Inactive</option>
                </select>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Select Role</label>
                <select class="form-control" name="role">
                    <option value="Admin">Admin</option>
                    <option value="Faculty">Faculty</option>
                    <option value="Student">Student</option>
                </select>
            </div>
        </div>
    </div>

    <button class="btn btn-dark" type="submit">Submit</button>
</form>
</div>
<%- include("footer") %> 