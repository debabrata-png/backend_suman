<%- include("header") %> 



<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">IA Marks Summary for <%= coursecode %></h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">IA marks summary</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements disabled -->
                <div class="card card-dark">
                    <div class="card-header">
                        <h3 class="card-title">IA marks summary</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">

                        <form id="frm-add-category" name="frm-add-category" method="post" action="/filteriamarkssummary">
                            <div class="form-group">
                                <label>Filter data</label>
                                <br />
                                <label>Academic Year</label>
                                <select class="form-control" name="academicyear">
                                    <option value="2015-16">2015-16</option>
                                    <option value="2016-17">2016-17</option>
                                    <option value="2017-18">2017-18</option>
                                    <option value="2018-19">2018-19</option>
                                    <option value="2019-20">2019-20</option>
                                    <option value="2020-21">2020-21</option>
                                    <option value="2021-22">2021-22</option>
                
                                </select>
                            </div>

                            <input type="hidden" value="<%= coursecode %>" name="coursecode"/>
                       
                       
                       <button class="btn btn-dark" type="submit">Submit</button>
                    </form>
                    <br />
                       
                    
                       
                        <div id="wdr-component"></div>
                        <link href="https://cdn.webdatarocks.com/latest/webdatarocks.min.css" rel="stylesheet"/>
                        <script src="https://cdn.webdatarocks.com/latest/webdatarocks.toolbar.min.js"></script>
                        <script src="https://cdn.webdatarocks.com/latest/webdatarocks.js"></script>
                        <script>
                            var pivot = new WebDataRocks({
	                            container: "#wdr-component",
	                            toolbar: true,
                                beforetoolbarcreated: customizeToolbar,
                            	report: {
		                            dataSource: {
			                            data:  [
                                        <% categories.forEach(function(data){ %>
                                            {
                                                "name": "<%= data.name %>",
                                                "regno": "<%= data.regno %>",
                                                "component": "<%= data.component %>",
                                                "score": <%= data.score %>
                                            },

                                        <% }) %>
                                        ]
                                    },

                                "slice": {
                                    "rows": [
                                        {
                                            "uniqueName": "name"
                                        }
                                    ],
                                    "columns": [
                                        {   
                                            "uniqueName": "Measures"
                                        },
                                        {
                                            "uniqueName": "component"
                                        }
                                    ],
                                    "measures": [
                                        {
                                            "uniqueName": "score",
                                            "aggregation": "sum"
                                        }
                                    ]
                                }

	                            }
                            });

                            function customizeToolbar(toolbar) {
                                var tabs = toolbar.getTabs(); // get all tabs from the toolbar
                                toolbar.getTabs = function() {
                                delete tabs[0]; // delete the first tab
                                return tabs;
                                }
                            }
                        </script>




                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

<%- include("footer") %> 