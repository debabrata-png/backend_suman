<%- include("header") %> 



<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">View All Attendance</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">All Attendance</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements disabled -->
                <div class="card card-dark">
                    <div class="card-header">
                        <h3 class="card-title">Attendance Records</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">

                       
                        <form id="frm-add-category" name="frm-add-category" method="post" action="/filterattendance">
                            <div class="row">
                                <div class="col-sm-6">
                            <div class="form-group">
                                <label>Start date</label>
                                <input required type="date" class="form-control" placeholder="Start date" name="dt1">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>End date</label>
                                <input required type="date" class="form-control" placeholder="End date" name="dt2">
                            </div>
                        </div>
                    </div>
                       
                       
                       <button class="btn btn-dark" type="submit">Submit</button>
                    </form>
                        <br />
                        Default attendance is for last 30 days.
                        <br />
                       
                        <div id="wdr-component"></div>
                        <link href="https://cdn.webdatarocks.com/latest/webdatarocks.min.css" rel="stylesheet"/>
                        <script src="https://cdn.webdatarocks.com/latest/webdatarocks.toolbar.min.js"></script>
                        <script src="https://cdn.webdatarocks.com/latest/webdatarocks.js"></script>
                        <script>
                            var pivot = new WebDataRocks({
	                            container: "#wdr-component",
	                            toolbar: true,
                                beforetoolbarcreated: customizeToolbar,
                            	report: {
		                            dataSource: {
			                            data:  [
                                        <% categories.forEach(function(data){ %>
                                            {
                                                "name": "<%= data.name %>",
                                                "regno": "<%= data.regno %>",
                                                "course": "<%= data.course %>",
                                                "coursecode": "<%= data.coursecode %>",
                                                "section": "<%= data.section %>",
                                                "semester": "<%= data.semester %>",
                                                "status": <%= data.status %>
        },

            <% }) %>
    ]
		                            }
	                            }
                            });

                            function customizeToolbar(toolbar) {
                                var tabs = toolbar.getTabs(); // get all tabs from the toolbar
                                toolbar.getTabs = function() {
                                delete tabs[0]; // delete the first tab
                                return tabs;
                                }
                            }
                        </script>




                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

<%- include("footer") %> 