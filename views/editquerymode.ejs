<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements disabled -->
                <div class="card card-dark">
                    <div class="card-header">
                        <h3 class="card-title">Edit Query Discussion Mode</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form id="frm-add-category" name="frm-add-category" method="post" action="/editquerymode/<%= pub._id %>">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Academic Year</label>
                                        <select class="form-control" name="year">
                                            <option <% if(pub.year == '2015-16'){ %>  selected <% } %> value="2015-16">2015-16</option>
                                            <option <% if(pub.year == '2016-17'){ %> selected <%  }  %> value="2016-17">2016-17</option>
                                            <option <% if(pub.year == '2017-18'){ %> selected <%  }  %> value="2017-18">2017-18</option>
                                            <option <% if(pub.year == '2018-19'){ %> selected <%  }  %> value="2018-19">2018-19</option>
                                            <option <% if(pub.year == '2019-20'){ %> selected <%  }  %> value="2019-20">2019-20</option>
                                            <option <% if(pub.year == '2020-21'){ %> selected <%  }  %> value="2020-21">2020-21</option>
                                            <option <% if(pub.year == '2021-22'){ %> selected <%  }  %> value="2021-22">2021-22</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Query Mode</label>
                                        <select class="form-control" name="type">
                                            <option <% if(pub.type == 'Online Help Desk'){ %>  selected <% } %> value="Online Help Desk">Online Help Desk</option>
                                            <option <% if(pub.type == 'App based Support'){ %> selected <%  }  %> value="App based Support">App based Support</option>
                                            <option <% if(pub.type == 'Chat Box'){ %> selected <%  }  %> value="Chat Box">Chat Box</option>
                                            <option <% if(pub.type == 'Interactive Radio Counselling'){ %> selected <%  }  %> value="Interactive Radio Counselling">Interactive Radio Counselling</option>
                                            <option <% if(pub.type == 'Web-Conferencing'){ %> selected <%  }  %> value="Web-Conferencing">Web-Conferencing</option>
                                            <option <% if(pub.type == 'Student Service Centre'){ %> selected <%  }  %> value="Student Service Centre">Student Service Centre</option>
                                            <option <% if(pub.type == 'Others'){ %> selected <%  }  %> value="Others">Others</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>No.of queries received</label>
                                        <input required value="<%= pub.received %>" type="number" class="form-control" placeholder="Enter no.of queries received" name="received">
                                    </div>
                                </div>
                                
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>No.of queries resolved</label>
                                        <input required value="<%= pub.resolved %>" type="number" class="form-control" placeholder="Enter no.of queries resolved" name="resolved">
                                    </div>
                                </div>
                                
                            


                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Status</label>
                                        <select class="form-control" name="status1">
                                            <option <% if(pub.status1 == 'Submitted'){ %>  selected <% } %> value="Submitted">Submitted</option>
                                            <option <% if(pub.status1 == 'In Process'){ %> selected <%  }  %> value="In Process">In Process</option>
                                            <option <% if(pub.status1 == 'Incomplete Documentation'){ %> selected <%  }  %> value="Incomplete Documentation">Incomplete Documentation</option>
                                            <option <% if(pub.status1 == 'Reviewed'){ %> selected <%  }  %> value="Reviewed">Reviewed</option>
                                            
                                        </select>
                                    </div>
                                </div>


                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Comments</label>
                                        <input required value="<%= pub.comments %>" type="text" class="form-control" placeholder="Enter the Comments" name="comments">
                                    </div>
                                </div>

                                
                            </div>

                            <button class="btn btn-dark" type="submit">Submit</button>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

