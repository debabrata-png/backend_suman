<%- include("header") %>

<style>
    #frm-add-category label.error{
        color:red;
    }
</style>

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Edit Class</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Edit Class</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements disabled -->
                <div class="card card-dark">
                    <div class="card-header">
                        <h3 class="card-title">Edit Class</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form id="frm-add-category" name="frm-add-category" method="post" action="/editvacclass/<%= pub. _id %>?classid=<%= vacid %>">
                            <div class="row">
                                
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Course</label>
                                        <input required value="<%= pub.course %>" type="text" class="form-control" placeholder="Enter course" name="course">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Class date</label>
                                        <input required value="<%= (pub.classdate.getMonth() + 1) + '/' + pub.classdate.getDate() + '/' + pub.classdate.getFullYear() %>" type="date" class="form-control" placeholder="Enter class date" name="classdate">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Class time</label>
                                        <input required value="<%= pub.classtime %>" type="text" class="form-control" placeholder="Enter class time" name="classtime">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Section</label>
                                        <select class="form-control" name="section">
                                            <option <% if(pub.section == 'A'){ %>  selected <% } %> value="A">A</option>
                                            <option <% if(pub.section == 'B'){ %>  selected <% } %> value="B">B</option>
                                            <option <% if(pub.section == 'C'){ %>  selected <% } %> value="C">C</option>
                                            <option <% if(pub.section == 'D'){ %>  selected <% } %> value="D">D</option>
                                            <option <% if(pub.section == 'E'){ %>  selected <% } %> value="E">E</option>
                                            <option <% if(pub.section == 'F'){ %>  selected <% } %> value="F">F</option>
                                            <option <% if(pub.section == 'G'){ %>  selected <% } %> value="G">G</option>
                                            <option <% if(pub.section == 'H'){ %>  selected <% } %> value="H">H</option>
                                            <option <% if(pub.section == 'I'){ %>  selected <% } %> value="I">I</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Semester</label>
                                        <select class="form-control" name="semester">
                                            <option <% if(pub.semester == '1'){ %>  selected <% } %> value="1">1</option>
                                            <option <% if(pub.semester == '2'){ %>  selected <% } %> value="2">2</option>
                                            <option <% if(pub.semester == '3'){ %>  selected <% } %> value="3">3</option>
                                            <option <% if(pub.semester == '4'){ %>  selected <% } %> value="4">4</option>
                                            <option <% if(pub.semester == '5'){ %>  selected <% } %> value="5">5</option>
                                            <option <% if(pub.semester == '6'){ %>  selected <% } %> value="6">6</option>
                                            <option <% if(pub.semester == '7'){ %>  selected <% } %> value="7">7</option>
                                            <option <% if(pub.semester == '8'){ %>  selected <% } %> value="8">8</option>
                                            <option <% if(pub.semester == '9'){ %>  selected <% } %> value="9">9</option>
                                            <option <% if(pub.semester == '10'){ %>  selected <% } %> value="10">10</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Link</label>
                                        <input required value="<%= pub.link %>" type="text" class="form-control" placeholder="Enter link" name="link">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Module</label>
                                        <input required value="<%= pub.module %>" type="text" class="form-control" placeholder="Enter module" name="module">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Topic</label>
                                        <input required value="<%= pub.topic %>" type="text" class="form-control" placeholder="Enter topic" name="topic">
                                    </div>
                                </div>
                               
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Enrollment Required</label>
                                        <select class="form-control" name="enrollreq">
                                            <option <% if(pub.enrollreq == 'No'){ %>  selected <% } %> value="No">No</option>
                                            <option <% if(pub.enrollreq == 'Yes'){ %> selected <%  }  %> value="Yes">Yes</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Status</label>
                                        <select class="form-control" name="status">
                                            <option <% if(pub.status == '1'){ %>  selected <% } %> value="1">Yes</option>
                                            <option <% if(pub.status == '0'){ %> selected <%  }  %> value="0">No</option>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <button class="btn btn-dark" type="submit">Submit</button>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

<%- include("footer") %>