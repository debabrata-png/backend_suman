<%- include("header") %> 

<div style="margin: 0px; padding: 40px;">
<h3>Add Event</h1>
<br>
<br>
<form id="frm-add-category" name="frm-add-category" method="post" action="/addevent">
    <div class="row">
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Event Name</label>
                <input required type="text" class="form-control" placeholder="Enter the name of event" name="eventname">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Event Description </label>
                <input required type="text" class="form-control" placeholder="Enter event description" name="description">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Department </label>
                <input required type="text" class="form-control" placeholder="Enter department" name="department">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Brochure link (Default link will be created if you write NA)</label>
                <input required type="text" class="form-control" placeholder="Enter link of the brochure" name="brochurelink">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Event Date</label>
                <input required type="date" class="form-control" placeholder="Enter date of event" name="date">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Event Time (HH:MM) for eg, 14:30</label>
                <input required type="text" class="form-control" placeholder="Enter time of event" name="time">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Event Co-ordinator </label>
                <input required type="text" class="form-control" placeholder="Enter name of the event coordinator" name="coordinator">
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Event Type</label>
                <select class="form-control" name="type">
                    <option value="Field Trip">Field Trip</option>
                    <option value="Research/IPR">Research/IPR</option>
                    <option value="Cultural">Cultural</option>
                    <option value="Extension Activity">Extension Activity</option>
                    <option value="Extension Lecture">Extension Lecture</option>
                    <option value="FDP">FDP</option>
                    <option value="Skill Development Wrokshop">Skill Development Workshop</option>
                    <option value="Career Counselling Workshop">Career Counselling Workshop</option>
                    <option value="Green Initiative">Green Initiative</option>
                    <option value="Commemorate Day">Commemorate Day</option>
                </select>
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Event link (Default link will be created if you write NA)</label>
                <input required type="text" class="form-control" placeholder="Enter link of the event" name="eventlink">
            </div>
        </div>
          
        
    </div>

    <button class="btn btn-dark" type="submit">Submit</button>
</form>
</div>
<%- include("footer") %> 