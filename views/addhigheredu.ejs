<%- include("header") %> 

<div style="margin: 0px; padding: 40px;">
<h3>Add Student Progression to Higher Education</h1>
<br>
<br>
<form id="frm-add-category" name="frm-add-category" method="post" action="/addhigheredu">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label>Academic Year</label>
                <select class="form-control" name="year">
                    <option value="2015-16">2015-16</option>
                    <option value="2016-17">2016-17</option>
                    <option value="2017-18">2017-18</option>
                    <option value="2018-19">2018-19</option>
                    <option value="2019-20">2019-20</option>
                    <option value="2020-21">2020-21</option>
                    <option value="2021-22">2021-22</option>

                </select>
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Name of Student</label>
                <input required type="text" class="form-control" placeholder="Enter name of student enrolling to higher education" name="studentname">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Name of Program Student Graduating from</label>
                <input required type="text" class="form-control" placeholder="Enter program name student graduated from" name="programgrad">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Name of Institution joined by student</label>
                <input required type="text" class="form-control" placeholder="Enter name of institution student joined" name="institution">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Name of Program Student Admitted to</label>
                <input required type="text" class="form-control" placeholder="Enter program name student admitted to" name="programadm">
            </div>
        </div>

        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Status</label>
                <input required type="text" class="form-control" placeholder="Enter the Status" name="status1">
            </div>
        </div>


        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Comments</label>
                <input required type="text" class="form-control" placeholder="Enter the Comments" name="comments">
            </div>
        </div>
  
        
    </div>

    <button class="btn btn-dark" type="submit">Submit</button>
</form>
</div>
<%- include("footer") %> 