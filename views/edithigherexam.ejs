<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements disabled -->
                <div class="card card-dark">
                    <div class="card-header">
                        <h3 class="card-title">Edit Student Qualifying in Higher Examination</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form id="frm-add-category" name="frm-add-category" method="post" action="/edithigherexam/<%= pub._id %>">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Academic Year</label>
                                        <select class="form-control" name="year">
                                            <option <% if(pub.year == '2015-16'){ %>  selected <% } %> value="2015-16">2015-16</option>
                                            <option <% if(pub.year == '2016-17'){ %> selected <%  }  %> value="2016-17">2016-17</option>
                                            <option <% if(pub.year == '2017-18'){ %> selected <%  }  %> value="2017-18">2017-18</option>
                                            <option <% if(pub.year == '2018-19'){ %> selected <%  }  %> value="2018-19">2018-19</option>
                                            <option <% if(pub.year == '2019-20'){ %> selected <%  }  %> value="2019-20">2019-20</option>
                                            <option <% if(pub.year == '2020-21'){ %> selected <%  }  %> value="2020-21">2020-21</option>
                                            <option <% if(pub.year == '2021-22'){ %> selected <%  }  %> value="2021-22">2021-22</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Roll/Registration Number</label>
                                        <input required value="<%= pub.regno %>" type="text" class="form-control" placeholder="Enter roll/registration number for exam" name="regno">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Name of Student</label>
                                        <input required value="<%= pub.studentname %>" type="text" class="form-control" placeholder="Enter name of student qualifying the examination" name="studentname">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Examination Title</label>
                                        <select class="form-control" name="examname">
                                            <option <% if(pub.examname == 'NET'){ %>  selected <% } %> value="NET">NET</option>
                                            <option <% if(pub.examname == 'SLET'){ %> selected <%  }  %> value="SLET">SLET</option>
                                            <option <% if(pub.examname == 'GATE'){ %> selected <%  }  %> value="GATE">GATE</option>
                                            <option <% if(pub.examname == 'GMAT'){ %> selected <%  }  %> value="GMAT">GMAT</option>
                                            <option <% if(pub.examname == 'CAT'){ %> selected <%  }  %> value="CAT">CAT</option>
                                            <option <% if(pub.examname == 'GRE'){ %> selected <%  }  %> value="GRE">GRE</option>
                                            <option <% if(pub.examname == 'JAM'){ %> selected <%  }  %> value="JAM">JAM</option>
                                            <option <% if(pub.examname == 'IELTS'){ %>  selected <% } %> value="IELTS">IELTS</option>
                                            <option <% if(pub.examname == 'TOEFL'){ %> selected <%  }  %> value="TOEFL">TOEFL</option>
                                            <option <% if(pub.examname == 'Civl Services'){ %> selected <%  }  %> value="Civl Services">Civl Services</option>
                                            <option <% if(pub.examname == 'State Government Examinations'){ %> selected <%  }  %> value="State Government Examinations">State Government Examinations</option>
                                            <option <% if(pub.examname == 'Other Examinations'){ %> selected <%  }  %> value="Other Examinations">Other Examinations</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Status</label>
                                        <input required value="<%= pub.status1 %>" type="text" class="form-control" placeholder="Enter the Status" name="status1">
                                    </div>
                                </div>


                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Comments</label>
                                        <input required value="<%= pub.comments %>" type="text" class="form-control" placeholder="Enter the Comments" name="comments">
                                    </div>
                                </div>
                                
                            </div>

                            <button class="btn btn-dark" type="submit">Submit</button>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

