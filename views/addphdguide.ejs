<%- include("header") %> 

<div style="margin: 0px; padding: 40px;">
<h3>Add Research Guide</h1>
<br>
<br>
<form id="frm-add-category" name="frm-add-category" method="post" action="/addphdguide">
    <div class="row">
        
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Name of Scholar</label>
                <input required type="text" class="form-control" placeholder="Enter the name of Phd Scholar" name="scholar">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Department</label>
                <input required type="text" class="form-control" placeholder="Enter the department" name="department">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Name of Guide</label>
                <input required type="text" class="form-control" placeholder="Enter the name of guide" name="researchguide">
            </div>
        </div>
       
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Title of Theisis</label>
                <input required type="text" class="form-control" placeholder="Enter the theisis title" name="title">
            </div>
        </div>
        
        <div class="col-sm-6">
            <div class="form-group">
                <label>Registration Year of Scholar</label>
                <select class="form-control" name="yor">
                    <option value="2015-16">2015-16</option>
                    <option value="2016-17">2016-17</option>
                    <option value="2017-18">2017-18</option>
                    <option value="2018-19">2018-19</option>
                    <option value="2019-20">2019-20</option>
                    <option value="2020-21">2020-21</option>
                    <option value="2021-22">2021-22</option>

                </select>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Year of degree awarded</label>
                <select class="form-control" name="yop">
                    <option value="2015-16">2015-16</option>
                    <option value="2016-17">2016-17</option>
                    <option value="2017-18">2017-18</option>
                    <option value="2018-19">2018-19</option>
                    <option value="2019-20">2019-20</option>
                    <option value="2020-21">2020-21</option>
                    <option value="2021-22">2021-22</option>

                </select>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Year of recognition as Research Guide</label>
                <select class="form-control" name="yog">
                    <option value="2015-16">2015-16</option>
                    <option value="2016-17">2016-17</option>
                    <option value="2017-18">2017-18</option>
                    <option value="2018-19">2018-19</option>
                    <option value="2019-20">2019-20</option>
                    <option value="2020-21">2020-21</option>
                    <option value="2021-22">2021-22</option>
                    <option value="NA">NA</option>

                </select>
            </div>
        </div>
       

        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Status</label>
                <select class="form-control" name="status1">
                    <option value="Submitted">Submitted</option>
                    <option value="In Process">In Process</option>
                    <option value="Incomplete Documentation">Incomplete Documentation</option>
                    <option value="Reviewed">Reviewed</option>
                    

                </select>
            </div>
        </div>


        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Comments</label>
                <input required type="text" class="form-control" placeholder="Enter the Comments" name="comments">
            </div>
        </div>
       
  
        
    </div>

    <button class="btn btn-dark" type="submit">Submit</button>
</form>
</div>
<%- include("footer") %> 