<%- include("header") %> 

<div style="margin: 0px; padding: 40px;">
<h3>Add Project</h1>
<br>
<br>
<form id="frm-add-category" name="frm-add-category" method="post" action="/addproject">
    <div class="row">
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Project</label>
                <input required type="text" class="form-control" placeholder="Enter project" name="project">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Funding Agency</label>
                <input required type="text" class="form-control" placeholder="Enter funding agency" name="agency">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Funds Sanctioned (in lakhs, number only)</label>
                <input required type="number" class="form-control" placeholder="Enter funds in lakhs (number only)" name="funds">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Duration in months</label>
                <input required type="text" class="form-control" placeholder="Enter duration" name="duration">
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Type</label>
                <select class="form-control" name="type">
                    <option value="Government">Government</option>
                    <option value="Non Government">Non Government</option>
                </select>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Year of award</label>
                <select class="form-control" name="yop">
                    <option value="2015-16">2015-16</option>
                    <option value="2016-17">2016-17</option>
                    <option value="2017-18">2017-18</option>
                    <option value="2018-19">2018-19</option>
                    <option value="2019-20">2019-20</option>
                    <option value="2020-21">2020-21</option>

                </select>
            </div>
        </div>
        
    </div>

    <button class="btn btn-dark" type="submit">Submit</button>
</form>
</div>
<%- include("footer") %> 