<body class="hold-transition login-page">
<div class="login-box" style="width: 1000px; margin: 20px;">
  <div class="login-logo">
    <a href="javascript:void(0)"><b>Campus</b>Canvas</a>
    <br>
    Registration Form
  </div>
  <br>
  Instructions: Please fill in all details. All fields are mandatory.
  <br><br>

  <% if(messages.success){ %>
    <div class="alert alert-success">
      <%= messages.success %>
    </div>  
  <% } %>

  <% if(messages.error){ %>
    <div class="alert alert-danger">
      <%= messages.error %>
    </div>  
  <% } %>

     

      


      <form id="frm-add-category" name="frm-add-category" method="post" action="/emailregform?colid=<%= colid %>&source<%= source %>">
        <!-- <h5 class="login-box-msg">All DETAILS</h5> -->
        <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <!-- text input -->
                <div class="form-group">
                    <label>Name</label>
                    <input required type="text" class="form-control" placeholder="Enter your name" name="name">
                </div>
            </div>
            <div class="col-sm-6">
                <!-- text input -->
                <div class="form-group">
                    <label>Email</label>
                    <input required type="text" class="form-control" placeholder="Enter your email" name="email">
                </div>
            </div>
            <div class="col-sm-6">
                <!-- text input -->
                <div class="form-group">
                    <label>Phone</label>
                    <input required type="text" class="form-control" placeholder="Enter your phone" name="phone">
                </div>
            </div>
            <div class="col-sm-6">
                <!-- text input -->
                <div class="form-group">
                    <label>Name of Institution</label>
                    <input type="text" required class="form-control" placeholder="Enter institution name" name="instname">
                </div>
            </div>
            
            <div class="col-sm-6">
                <!-- text input -->
                <div class="form-group">
                    <label>State</label>
                    <input required type="text" class="form-control" placeholder="Enter state" name="state">
                </div>
            </div>
            <div class="col-sm-6">
                <div class="form-group">
                    <label>Prefer time to Contact</label>
                    <select class="form-control" name="time">
                        <option value="09:00A.M - 10:00A.M">09:00A.M - 10:00A.M</option>
                        <option value="10:00A.M - 11:00A.M">10:00A.M - 11:00A.M</option>
                        <option value="11:00A.M - 12:00P.M">11:00A.M - 12:00P.M</option>
                        <option value="12:00P.M - 01:00P.M">12:00P.M - 01:00P.M</option>
                        <option value="01:00P.M - 02:00P.M">01:00P.M - 02:00P.M</option>
                        <option value="02:00P.M - 03:00P.M">02:00P.M - 03:00P.M</option>
                        <option value="03:00P.M - 04:00P.M">03:00P.M - 04:00P.M</option>
                        <option value="04:00P.M - 05:00P.M">04:00P.M - 05:00P.M</option>
                        <option value="05:00P.M - 06:00P.M">05:00P.M - 06:00P.M</option>
                        <option value="06:00P.M - 07:00P.M">06:00P.M - 07:00P.M</option>
                        <option value="07:00P.M - 08:00P.M">07:00P.M - 08:00P.M</option>
                    </select>
                </div>
            </div>
            <div class="col-sm-12">
                <!-- text input -->
                <div class="form-group">
                    <label>Tell us about yourself</label>
                    <input required type="textarea" class="form-control" placeholder="Enter something about yourself" name="details">
                </div>
            </div>
        </div>
    </div>


