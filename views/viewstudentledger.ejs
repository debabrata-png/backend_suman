<%- include("header") %> 



<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">View ledger for reg no <%= fregno %></h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Student ledger</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements disabled -->
                <div class="card card-dark">
                    <div class="card-header">
                        <h3 class="card-title">Student ledger</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table>
                            <tr>
                                <td>
                                    <a class="btn btn-dark" href="/addstudentledger">+ Add New</a>
                                </td>
                                <td width="20px"></td>
                                <td>
                                    <a class="btn btn-dark" href="/deleteallstudentledger">Delete entries for <%= fregno %></a>
                                </td>
                                <td width="20px"></td>
                                <td>
                                    <a class="btn btn-dark" href="/printstudentledger">Print ledger for <%= fregno %></a>
                                </td>
                                <td width="20px"></td>
                                <td>
                                    <a class="btn btn-dark" href="/applyfees">+ Apply fees</a>
                                </td>
                                <td width="20px"></td>
                                <td>
                                    <a class="btn btn-dark" href="/applyscholarship">+ Apply scholarship</a>
                                </td>
                                <td width="20px"></td>
                                
                            </tr>
                        </table>
                        <br><br>
                        <h4>Student details</h4>
                        <br>
                            <% users.forEach(function(data){ %>
                                <h5><%= data.name %></h5>
                                
                                Semester <%= data.semester %>
                                <br>
                                Section <%= data.section %>
                                <br>
                                Programcode <%= data.programcode %>
                                <br><br>
                            <% }) %>
                        <br><br>
                        <h4>Net balance and payable balance </h4>
                        <br>
                            <% balance.forEach(function(data1){ %>
                                
                                Net balance <%= data1.total_attendance %>
                                <br>
                                
                            <% }) %>
                            <% payable.forEach(function(data2){ %>
                                
                                Payable balance <%= data2.total_attendance %>
                                <br>
                                
                            <% }) %>
                        <br><br>
                        <table id="tbl-list-category" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    
                                    <th>Fee group</th>
                                    <th>Fee item</th>
                                    <th>Amount</th>
                                    <th>Semester</th>
                                    <th>Academic year</th>
                                    <th>Template</th>
                                    <th>Transaction date</th>
                                    <th>Payment details</th>
                                    <th>Type</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% categories.forEach(function(data){ %>
                                <tr>
                                    <!-- <td><%= data.id %></td> -->
                                    
                                    <td><%= data.feegroup %></td>
                                    <td><%= data.feeitem %></td>
                                    <td><%= data.amount %></td>
                                    <td><%= data.semester %></td>
                                    <td><%= data.academicyear %></td>
                                    <td><%= data.feecategory %></td>
                                    <td><%= data.classdate %></td>
                                    <td><%= data.paymode %> <%= data.paydetails %>
                                    <br>Installment <%= data.installment %> Comments <%= data.comments %>
                                    </td>
                                    <td><%= data.type %></td>
                                    <td>
                                        <a href="/editstudentledger/<%= data.id %>" class="btn btn-primary"><i class="fa fa-edit" title='Edit'></i></a>
                                        <a href="/addsingleledger?feegroup=<%= data.feegroup %>&feecategory=<%= data.feecategory %>" class="btn btn-primary"><i class="fas fa-cash-register" title='Add ledger entry'></i></a>
                                        <a href="/feesreceipt?feegroup=<%= data.feegroup %>&feecategory=<%= data.feecategory %>&amount=<%= data.amount %>&type=<%= data.type %>&comments=<%= data.comments %>&paymode=<%= data.paymode %>&paydetails=<%= data.paydetails %>&student=<%= data.student %>&regno=<%= data.regno %>&classdate=<%= data.classdate %>" class="btn btn-primary"><i class="fas fa-receipt" title='Fees receipt'></i></a>
                                        <form method="post" action="/deletestudentledger" id="frm-delete-category-<%= data.id %>">
                                        
                                            <input type="hidden" value="<%= data.id %>" name="category_id"/>

                                        </form>

                                    <a href="javascript:void(0)" onclick="if(confirm('Are you sure want to delete ? ')){  $('#frm-delete-category-<%= data.id %>').submit()  }" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                                <% }) %>
                            </tbody>
                            <!-- <tfoot>
                                <tr>
                                    <th>#ID</th>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </tfoot> -->
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

<%- include("footer") %> 