<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements disabled -->
                <div class="card card-dark">
                    <div class="card-header">
                        <h3 class="card-title">Edit Result Declaration</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form id="frm-add-category" name="frm-add-category" method="post" action="/editresult/<%= pub._id %>">
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Academic Year</label>
                                        <select class="form-control" name="year">
                                            <option <% if(pub.year == '2015-16'){ %>  selected <% } %> value="2015-16">2015-16</option>
                                            <option <% if(pub.year == '2016-17'){ %> selected <%  }  %> value="2016-17">2016-17</option>
                                            <option <% if(pub.year == '2017-18'){ %> selected <%  }  %> value="2017-18">2017-18</option>
                                            <option <% if(pub.year == '2018-19'){ %> selected <%  }  %> value="2018-19">2018-19</option>
                                            <option <% if(pub.year == '2019-20'){ %> selected <%  }  %> value="2019-20">2019-20</option>
                                            <option <% if(pub.year == '2020-21'){ %> selected <%  }  %> value="2020-21">2020-21</option>
                                            <option <% if(pub.year == '2021-22'){ %> selected <%  }  %> value="2021-22">2021-22</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Program Code</label>
                                        <input required value="<%= pub.programcode %>" type="text" class="form-control" placeholder="Enter program code" name="programcode">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Program Name</label>
                                        <input required value="<%= pub.programname %>" type="text" class="form-control" placeholder="Enter program name" name="programname">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Semester/Year</label>
                                        <select class="form-control" name="semester">
                                            <option <% if(pub.semester == 'First'){ %>  selected <% } %> value="First">First</option>
                                            <option <% if(pub.semester == 'Second'){ %> selected <%  }  %> value="Second">Second</option>
                                            <option <% if(pub.semester == 'Third'){ %> selected <%  }  %> value="Third">Third</option>
                                            <option <% if(pub.semester == 'Fourth'){ %> selected <%  }  %> value="Fourth">Fourth</option>
                                            <option <% if(pub.semester == 'Fifth'){ %> selected <%  }  %> value="Fifth">Fifth</option>
                                            <option <% if(pub.semester == 'Sixth'){ %> selected <%  }  %> value="Sixth">Sixth</option>
                                            <option <% if(pub.semester == 'Seventh'){ %> selected <%  }  %> value="Seventh">Seventh</option>
                                            <option <% if(pub.semester == 'Eighth'){ %> selected <%  }  %> value="Eighth">Eighth</option>
                                        </select>
                                    </div>
                                </div>
                                
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Last date of Exam</label>
                                        <input required value="<%= pub.lastdate %>" type="date" class="form-control" placeholder="Enter last date of last semester/year end exam" name="lastdate">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Date of Result Declaration</label>
                                        <input required value="<%= pub.resultdate %>" type="date" class="form-control" placeholder="Enter date of result declaration" name="resultdate">
                                    </div>
                                </div>


                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Status</label>
                                        <input required value="<%= pub.status1 %>" type="text" class="form-control" placeholder="Enter the Status" name="status1">
                                    </div>
                                </div>


                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Comments</label>
                                        <input required value="<%= pub.comments %>" type="text" class="form-control" placeholder="Enter the Comments" name="comments">
                                    </div>
                                </div>
                                
                                
                            </div>

                            <button class="btn btn-dark" type="submit">Submit</button>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

