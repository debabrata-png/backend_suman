<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">
            <div class="col-md-12">
                <!-- general form elements disabled -->
                <div class="card card-dark">
                    <div class="card-header">
                        <h3 class="card-title">Edit Syllabus Revision Programwise</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form id="frm-add-category" name="frm-add-category" method="post" action="/editsyllabusprog/<%= pub._id %>">
                            <div class="row">
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Program Code</label>
                                        <input required value="<%= pub.programcode %>" type="text" class="form-control" placeholder="Enter program code" name="programcode">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Program Name</label>
                                        <input required value="<%= pub.programname %>" type="text" class="form-control" placeholder="Enter program name" name="programname">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Year of Introduction(eg.-2020-21)</label>
                                                <select class="form-control" name="yearofintro">
                                                    <option <% if(pub.yearofintro == '2015-16'){ %>  selected <% } %> value="2015-16">2015-16</option>
                                                    <option <% if(pub.yearofintro == '2016-17'){ %> selected <%  }  %> value="2016-17">2016-17</option>
                                                    <option <% if(pub.yearofintro == '2017-18'){ %> selected <%  }  %> value="2017-18">2017-18</option>
                                                    <option <% if(pub.yearofintro == '2018-19'){ %> selected <%  }  %> value="2018-19">2018-19</option>
                                                    <option <% if(pub.yearofintro == '2019-20'){ %> selected <%  }  %> value="2019-20">2019-20</option>
                                                    <option <% if(pub.yearofintro == '2020-21'){ %> selected <%  }  %> value="2020-21">2020-21</option>
                                                    <option <% if(pub.yearofintro == '2021-22'){ %> selected <%  }  %> value="2021-22">2021-22</option>
                                                </select>
                                            </div>
                                        </div>

                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Department</label>
                                        <input required value="<%= pub.department %>" type="text" class="form-control" placeholder="Enter department" name="department">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>If Syllabus Revision carried out in last five years</label>
                                        <select class="form-control" name="status">
                                            <option <% if(pub.status == 'Yes'){ %>  selected <% } %> value="Yes">Yes</option>
                                            <option <% if(pub.status == 'No'){ %> selected <%  }  %> value="No">No</option>
                                            
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Year of Syllabus Revision(eg.-2020-21)</label>
                                        <select class="form-control" name="yearofrevision">
                                            <option <% if(pub.yearofrevision == '2015-16'){ %>  selected <% } %> value="2015-16">2015-16</option>
                                            <option <% if(pub.yearofrevision == '2016-17'){ %> selected <%  }  %> value="2016-17">2016-17</option>
                                            <option <% if(pub.yearofrevision == '2017-18'){ %> selected <%  }  %> value="2017-18">2017-18</option>
                                            <option <% if(pub.yearofrevision == '2018-19'){ %> selected <%  }  %> value="2018-19">2018-19</option>
                                            <option <% if(pub.yearofrevision == '2019-20'){ %> selected <%  }  %> value="2019-20">2019-20</option>
                                            <option <% if(pub.yearofrevision == '2020-21'){ %> selected <%  }  %> value="2020-21">2020-21</option>
                                            <option <% if(pub.yearofrevision == '2021-22'){ %> selected <%  }  %> value="2021-22">2021-22</option>
                                        </select>
                                    </div>
                                </div>
                                
                                <div class="col-sm-6">
                                    <!-- text input -->
                                    <div class="form-group">
                                        <label>Document Link</label>
                                        <input required value="<%= pub.link %>" type="text" class="form-control" placeholder="Enter link of document" name="link">
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <!-- text input -->
                                <div class="form-group">
                                    <label>Status</label>
                                    <select class="form-control" name="status1">
                                        <option <% if(pub.status1 == 'Submitted'){ %>  selected <% } %> value="Submitted">Submitted</option>
                                        <option <% if(pub.status1 == 'In Process'){ %> selected <%  }  %> value="In Process">In Process</option>
                                        <option <% if(pub.status1 == 'Incomplete Documentation'){ %> selected <%  }  %> value="Incomplete Documentation">Incomplete Documentation</option>
                                        <option <% if(pub.status1 == 'Reviewed'){ %> selected <%  }  %> value="Reviewed">Reviewed</option>
                                        
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <!-- text input -->
                                <div class="form-group">
                                    <label>Comments</label>
                                    <input required value="<%= pub.comments %>" type="text" class="form-control" placeholder="Enter your comments" name="comments">
                                </div>
                            </div>

                            <button class="btn btn-dark" type="submit">Submit</button>
                        </form>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

