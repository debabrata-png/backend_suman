<%- include("header") %> 

<div style="margin: 0px; padding: 40px;">
<h3>Add E-content developed by Teachers</h1>
<br>
<br>
<form id="frm-add-category" name="frm-add-category" method="post" action="/addecontent">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <label>Academic Year</label>
                <select class="form-control" name="year">
                    <option value="2015-16">2015-16</option>
                    <option value="2016-17">2016-17</option>
                    <option value="2017-18">2017-18</option>
                    <option value="2018-19">2018-19</option>
                    <option value="2019-20">2019-20</option>
                    <option value="2020-21">2020-21</option>
                    <option value="2021-22">2021-22</option>

                </select>
            </div>
        </div>
      
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Name of Module developed </label>
                <input required type="text" class="form-control" placeholder="Enter name of the module developed" name="module">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Name of Platform</label>
                <input required type="text" class="form-control" placeholder="Enter name of the platform on which module is developed" name="platform">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Date of Launching E-Content</label>
                <input required type="date" class="form-control" placeholder="Enter the date" name="date">
            </div>
        </div>
        <div class="col-sm-6">
            <div class="form-group">
                <label>Available E-content development Facility</label>
                <select class="form-control" name="facility">
                    <option value="Media Centre">Media Centre</option>
                    <option value="Audio-Visual Centre">Audio-Visual Centre</option>
                    <option value="Lecture Capturing System">Lecture Capturing System</option>
                    <option value="Mixing Equipments & Softwares for Editing">Mixing Equipments & Softwares for Editing</option>
                   

                </select>
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Link to Documents & Facility available</label>
                <input required type="text" class="form-control" placeholder="Enter the link to documents and facility avvailable" name="doclink">
            </div>
        </div>
        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Link to Videos</label>
                <input required type="text" class="form-control" placeholder="Enter the link to videos of media centre & recording facility" name="videolink">
            </div>
        </div>



        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Status</label>
                <input required type="text" class="form-control" placeholder="Enter the Status" name="status1">
            </div>
        </div>


        <div class="col-sm-6">
            <!-- text input -->
            <div class="form-group">
                <label>Comments</label>
                <input required type="text" class="form-control" placeholder="Enter the Comments" name="comments">
            </div>
        </div>
        
    </div>

    <button class="btn btn-dark" type="submit">Submit</button>
</form>
</div>
<%- include("footer") %> 